@model List<Course>
@{
    ViewBag.Title = "Courses";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/global.css" rel="stylesheet" />
</head>
<body>
    <a asp-action="create" type="button" class="btn mb-4 create__btn">Add Course</a>
    <table class="table table-hover table-responsive table-bordered">
        <thead class="text-center">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Department Number</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5">No Courses</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CourseId</td>
                        <td>@item.CourseName</td>
                        <td>@item.Duration Hours</td>
                        <td>@item.DeptNo</td>
                        <td>
                            <a asp-action="details" asp-route-id="@item.CourseId" class="btn btn-primary">Details</a>
                            <a asp-action="edit" asp-route-id="@item.CourseId" class="btn btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
                            <a asp-action="delete" asp-route-id="@item.CourseId" onclick="return confirm('Are u sure?')" class="btn btn-danger">Confirmed Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
